<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CartActivity">

    <LinearLayout
        android:id="@+id/LayoutTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#A8A8A8"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/PangerlTextView"
            android:layout_width="47dp"
            android:layout_height="53dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Pangerl-Shop"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textDirection="locale" />

        <SearchView
            android:id="@+id/searchBarSearch"
            android:layout_width="188dp"
            android:layout_height="match_parent"
            android:background="#FFFFFF"
            android:orientation="vertical" />

        <ImageButton
            android:id="@+id/ShoppingCartImageButton"
            android:layout_width="25dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:srcCompat="@drawable/shopping_cart_klein_klein"
            tools:ignore="SpeakableTextPresentCheck" />

        <ImageButton
            android:id="@+id/SettingsImageButton"
            android:layout_width="25dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:srcCompat="@android:drawable/ic_menu_manage"
            tools:ignore="SpeakableTextPresentCheck" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="524dp"
        android:orientation="vertical">

        <ListView
            android:layout_width="match_parent"
            android:layout_height="517dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="73dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="11dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70px"
            android:layout_marginTop="55px"
            android:layout_marginRight="30px"
            android:layout_weight="1"
            android:autoText="false"
            android:text="Gesamt Preis:"
            android:textAlignment="center"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/gesamtpreis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="55px"
            android:layout_weight="1"
            android:text="TextView" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/buttonId"
            android:layout_width="272dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:gravity="center"
            android:text="Bestellen" />
    </LinearLayout>

</LinearLayout>